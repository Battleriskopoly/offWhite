  <title>Blog | Offf White Web Design,  Harrisburg PA</title>
  <meta name="description" content="A small and simple web design company. Specailizing in pretty sites and originality.
  Based out of Harrisburg PA.">
</head>
<nav class="navbar navbar-default hideDesktop navbar-fixed-top" id="mobileNav">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" id="navToggleMobile" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", root_path%></li>
      </ul>
    </div>
  </div>
</nav>
<div class="container-fluid">

  <div class=" row navbar navbar-default navbar-top blogNav hideMobile" id="nav">
    <div class="col-lg-12">
      <ul>
        <li id="homeLi"><a href="<%=root_path%>"><img id="navLogo" alt="Off White, Off White Web Design's Logo" src="http://az756089.vo.msecnd.net/offwhitecdn/square.svg"></a></li>
      </ul>

    </div>
  </div>
  <div class="row">
    <img id="mobileLogo" class="hideDesktop" alt="Off White, Off White Web Design's Logo" src="http://az756089.vo.msecnd.net/offwhitecdn/square.svg">
  </div>
    <%= render partial: "posts", collection: @posts, as: :post %>
  <div class="row">
        <div class="col-md-12">
          <nav>
            <ul class="pager">
              <%if @pagenation == "older" || @pagenation == "newerolder"%>
                <li class="pagenation"><a  href="<%=posts_path%>/page/<%= @pagenumber + 1%>">Older</a></li>
              <%end%>
              <%if @pagenation == "newer" || @pagenation == "newerolder"%>
                      <li class="pagenation"><a  href="<%=posts_path%>/page/<%= @pagenumber - 1%>">Newer</a></li>
              <%end%>
            </ul>
          </nav>
      </div>
    </div>
</div>